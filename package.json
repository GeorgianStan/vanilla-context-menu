{
  "name": "vanilla-context-menu",
  "version": "2.0.0",
  "description": "Easily create context menus using JavaScript and integrate them in any web application.",
  "main": "./dist/vanilla-context-menu.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "webpack --mode=production",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,scss}\"",
    "prepare": "husky install",
    "build": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeorgianStan/vanilla-context-menu.git"
  },
  "keywords": [
    "javascript",
    "context-menu",
    "right-click menu",
    "vanilla javascript",
    "menu"
  ],
  "author": "Stan Georgian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GeorgianStan/vanilla-context-menu/issues",
    "email": "georgian.stan8@gmail.com"
  },
  "homepage": "https://github.com/GeorgianStan/vanilla-context-menu#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@webpack-cli/generators": "^3.0.4",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.4",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "lint-staged": {
    "*.{ts,scss}": "prettier --write",
    "*.ts": "eslint --cache"
  }
}
